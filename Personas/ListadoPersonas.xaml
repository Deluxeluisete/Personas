<UserControl x:Class="Personas.ListadoPersonas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Nombre" Margin="10"></TextBlock>
            <TextBox Width="700" Height="13" HorizontalAlignment="Left" Margin="10,0,0,0"></TextBox>
            <TextBlock Text="Edad" Margin="10"></TextBlock>
            <TextBox Width="700" Height="13" HorizontalAlignment="Left" Margin="10,0,0,0"></TextBox>
            <TextBlock Text="Nacionalidad" Margin="10"></TextBlock>
            <WrapPanel>
                <ComboBox Width="200" HorizontalAlignment="Left" Margin="6,0,0,0">
                    <ItemsControl>Italiana</ItemsControl>
                    <ItemsControl>Española</ItemsControl>
                    <ItemsControl>Francesa</ItemsControl>
                </ComboBox>
                <Button Width="20" Height="20" Content="+"></Button>
            </WrapPanel>
          
            <Button Width="120" Height="20" Content="Aceptar"></Button>
        </StackPanel>
    </Grid>
</UserControl>
